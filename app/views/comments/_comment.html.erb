<div class="rounded-xl bg-gray-100 mb-5 py-2 px-3">
    <%= link_to [comment.article, comment],
            data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                } || {} do %>
        <i class="fa fa-trash float-right"></i>
    <% end %>
    <p><%= comment.body%></p>
    <p class="text-right italic text-gray-400">- <%= comment.commenter%></p>
</div>
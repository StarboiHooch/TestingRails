<div class="container">
    <%= form_with model: [ @article, @article.comments.build ] do |form| %>
    <div>
        <%= form.label :commenter %><br>
        <%= form.text_field :commenter %>
    </div>
    <div>
        <%= form.label :body %><br>
        <%= form.text_area :body %>
    </div>
    <div>
        <%= form.button "Post", type: :submit, class: "rounded-xl border-2 border-gray-800 p-2"%>
    </div>
    <% end %>
</div>